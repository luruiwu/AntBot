<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="antbot">
	
        <!-- gazebo -->
        <!--xacro:include filename="$(find antbot_description)/urdf/antbot.gazebo"/-->
        <xacro:property name="body_width"   value=".8"/>
        <xacro:property name="body_length"  value="1.3"/>
        <xacro:property name="body_height"  value=".08"/>
        <xacro:property name="wheel_length" value=".1"/>
        <xacro:property name="wheel_radius" value=".12"/>
        <xacro:property name="wheel_color"  value="0 0 .8 1"/>

<!--base_link-->
        <link name="base_link">
				<inertial>
					<origin xyz="0 0 0" />
					<mass value="100.0" />
					<inertia  ixx="1.0" ixy="0.0"  ixz="0.0"  iyy="1.0"  iyz="0.0"  izz="100.0" />
				</inertial>
                <visual>
                        <geometry>
                                <box size="${body_length} ${body_width} ${body_height}"/>
                        </geometry>
                        <origin xyz="0 0 ${wheel_radius}"/>
                </visual>
                <collision>
                        <geometry>
                                <box size="${body_length} ${body_width} ${body_height}"/>
                        </geometry>
                        <origin xyz="0 0 ${wheel_radius}"/>
                </collision>
        </link>

<!--laser_link-->
        <link name="laser_link">
				<inertial>
					<origin xyz="0 0 0" />
					<mass value="0.1" />
					<inertia  ixx="1.0" ixy="0.0"  ixz="0.0"  iyy="1.0"  iyz="0.0"  izz="10.0" />
				</inertial>
                <visual>
                        <geometry>
                                <cylinder length="0.1" radius="0.05"/>
                        </geometry>
                        <material name="green">
                                <color rgba="0 0.8 0 1"/>
                        </material>
                        <origin xyz="0 0 0.08"/>
                </visual>
                <collision>
                        <geometry>
                                <cylinder length="0.1" radius="0.05"/>
                        </geometry>
                        <origin xyz="0 0 0.08"/>
                </collision>
        </link>
        <joint name="base_laser_link_to_base_link" type="fixed">
            <parent link="base_link"/>
            <child link="laser_link"/>
            <origin xyz="0.6 0 ${wheel_radius}"/>
        </joint>

<!-- front left wheel-->
        <link name="front_left_wheel">
				<inertial>
					<origin xyz="0 0 0" />
					<mass value="10.0" />
					<inertia  ixx="1.0" ixy="0.0"  ixz="0.0"  iyy="100.0"  iyz="0.0"  izz="1.0" />
				</inertial>
                <visual>
                        <geometry>
                                <cylinder length="${wheel_length}" radius="${wheel_radius}"/>
                        </geometry>
                        <material name="blue">
                                <color rgba="${wheel_color}"/>
                        </material>
                        <origin rpy="1.57075 0 0" xyz="0 0.05 0"/>
                </visual>
        </link>
        <joint name="front_left_wheel_to_base_link" type="continuous">
                <parent link="base_link"/>
                <child link="rear_left_wheel"/>
                <origin xyz="-${body_width/2} ${body_width/2} ${wheel_radius}"/>
                <axis xyz="0 1 0"/>
        </joint>
<!-- front right wheel-->
        <link name="front_right_wheel">
				<inertial>
					<origin xyz="0 0 0" />
					<mass value="10.0" />
					<inertia  ixx="1.0" ixy="0.0"  ixz="0.0"  iyy="100.0"  iyz="0.0"  izz="1.0" />
				</inertial>
                <visual>
                        <geometry>
                                <cylinder length="${wheel_length}" radius="${wheel_radius}"/>
                        </geometry>
                        <material name="blue">
                                <color rgba="${wheel_color}"/>
                        </material>
                        <origin rpy="1.57075 0 0" xyz="0 -0.05 0"/>
                </visual>
        </link>
        <joint name="front_right_wheel_to_base_link" type="continuous">
                <parent link="base_link"/>
                <child link="rear_right_wheel"/>
                <origin xyz="-${body_width/2} -${body_width/2} ${wheel_radius}"/>
                <axis xyz="0 1 0"/>
        </joint>

<!-- rear left wheel-->
        <link name="rear_left_wheel">
				<inertial>
					<origin xyz="0 0 0" />
					<mass value="10.0" />
					<inertia  ixx="1.0" ixy="0.0"  ixz="0.0"  iyy="100.0"  iyz="0.0"  izz="1.0" />
				</inertial>
                <visual>
                        <geometry>
                                <cylinder length="${wheel_length}" radius="${wheel_radius}"/>
                        </geometry>
                        <material name="blue">
                                <color rgba="${wheel_color}"/>
                        </material>
                        <origin rpy="1.57075 0 0" xyz="0 0.05 0"/>
                </visual>
        </link>
        <joint name="rear_left_wheel_to_base_link" type="continuous">
                <parent link="base_link"/>
                <child link="front_left_wheel"/>
                <origin xyz="${body_width/2} ${body_width/2} ${wheel_radius}"/>
                <axis xyz="0 1 0"/>
        </joint>
<!-- rear right wheel-->
        <link name="rear_right_wheel">
				<inertial>
					<origin xyz="0 0 0" />
					<mass value="10.0" />
					<inertia  ixx="1.0" ixy="0.0"  ixz="0.0"  iyy="100.0"  iyz="0.0"  izz="1.0" />
				</inertial>
                <visual>
                        <geometry>
                                <cylinder length="${wheel_length}" radius="${wheel_radius}"/>
                        </geometry>
                        <material name="blue">
                                <color rgba="${wheel_color}"/>
                        </material>
                        <origin rpy="1.57075 0 0" xyz="0 -0.05 0"/>
                </visual>
        </link>
        <joint name="rear_right_wheel_to_base_link" type="continuous">
                <parent link="base_link"/>
                <child link="front_right_wheel"/>
                <origin xyz="${body_width/2} -${body_width/2} ${wheel_radius}"/>
                <axis xyz="0 1 0"/>
        </joint>

</robot>
